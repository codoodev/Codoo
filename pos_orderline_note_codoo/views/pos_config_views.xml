<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form_inherit" model="ir.ui.view">
            <field name="name">pos.config.view.form.inherit</field>
            <field name="model">pos.config</field>
            <field name="priority" eval="8" />
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
             <xpath expr="//div[@id='category_reference']" position="inside">
                 <br />
                    <div class="o_setting_left_pane">
                        <field name="iface_orderline_order_notes"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="iface_orderline_order_notes"/>
                        <span class=""></span>
                        <div class="text-muted">
                            Add notes to orderlines
                        </div>
                    </div>
            </xpath>
            </field>
        </record>
    </data>
</odoo>